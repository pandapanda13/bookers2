<div class="container" px-5 px-sm-0>
 <div class="row">
 <%= render 'side', user: @user, book: @book %>
  <div class="col-md-8 offset-md-1">
     <h2>Users</h2>
      <table class="table">
         <thed>
            <tr>
               <th>image</th>
               <th>name</th>
               <th colspan="3"></th>
            </tr>
         </thed>
         <tbody>
          <% @users.each do |user| %>
          <tr>
             <td><%= image_tag user.get_profile_image_id("50x50") %></td>
             <td><%= user.name %></td>
             <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
         <% end %>
         </tbody>
      </table>
  </div>
 </div>
</div>


