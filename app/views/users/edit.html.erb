
  <div cass="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto ">
      <%= form_with model: @user, local:true do |f| %>
      <h1>User info</h1>
      <div class="error_message">
      <% if @user.errors.any? %>
      <%= @user.errors.count %> errors prohibited this obj from being saved
     　　<ul>
       　<% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       　<% end %>
     　　</ul>
     　<% end %>
      </div>

        <h5>Name</h5>
        <%= f.text_field :name, size: "40x45" %>

        <h5>Image</h5>
        <%= f.file_field :profile_image, accept: "image/*" %>

        <h5>Introduction</h5>
        <%= f.text_area :introduction, size: "40x3" %><br>

        <%= f.submit 'Update User', class: "btn btn-secondary" %>

      <% end %>

    </div>
  </div>



