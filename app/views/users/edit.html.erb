
  <div cass="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto ">
      <%= form_with model: @user, local:true do |f| %>
      <h1>User info</h1>
      <div class="error_message">
      <% if @user.errors.any? %>
      <%= @user.errors.count %><%= ' error'.pluralize(@user. errors.count) %>  prohibited this obj from being saved
     <ul> errors prohibited this obj from being saved
     　　<ul>
       　<% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       　<% end %>
     　　</ul>
     　<% end %>
      </div>
      <div class="form-group">
        <label for="label">Name</label><br>
         <%= f.text_field :name, size: "40x45" %>
      </div>
      <div class="form-group">
        <label for="label">Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="label">Introduction</label><br>
        <%= f.text_area :introduction, size: "40x3" %><br>
      </div>
      <div class="form-group">
        <%= f.submit 'Update User', class: "btn btn-secondary" %>
      </div>
       <% end %>

    </div>
  </div>



