
  <div cass="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-g-5 px-5 px-sm-0 mx-auto ">
      <%= form_with model: @user, local:true do |f| %>
        <h1>User info</h1>
        <h5>Name</h5>
        <%= f.text_field :name %>

        <h5>Image</h5>
        <%= f.file_field :profile_image, accept: "image/*" %>

        <h5>Introduction</h5>
        <%= f.text_area :introduction %><br>

        <%= f.submit 'Update User', class: "btn btn-secondary" %>

      <% end %>

    </div>
  </div>



