<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-sm-o mx-auto">
   <h1>Editing Book</h1>
   <%= form_with model: @book, local:true do |f| %>
    <label for="title">Title</label><br>
    <%= f.text_field :title %><br>
    <label for="body">Opinion</label><br>
    <%= f.text_area :body %><br>

    <%= f.submit 'Update Book', class: "btn btn-success" %><br>
    
    <%= link_to "Show", book_path %>
    |
    <%= link_to "Back", books_path %>
   <% end %>
  </div>
 </div>
</div>

















