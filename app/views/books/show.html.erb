<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<div class="container" px-5 px-sm-0>
 <div class="row">
 <%= render 'users/side', user: @user, book: @book %>
   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thed>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thed>
      <tbody>
       <tr>
        <td><%= image_tag @book.user.get_profile_image_id("50x50") %></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
          <% end %>
        </td>
       </tr>
       <tr>
         <td><%= @user.name %></td>
       </tr>
      </tbody>
     </table>
  </div>
 </div>
</div>
